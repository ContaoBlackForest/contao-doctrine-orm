{
	"name":"bit3/contao-doctrine-orm",
	"description":"Doctrine ORM for Contao CMS",
	"keywords":["contao", "doctrine", "orm"],
	"type":"contao-module",
	"license":"LGPL-3.0+",
	"authors":[
		{
			"name":"Tristan Lins",
			"email":"tristan.lins@bit3.de",
			"homepage":"http://bit3.de",
			"role":"Developer"
		}
	],
	"support":{
		"email":"info@bit3.de",
		"issues":"https://github.com/bit3/contao-doctrine-orm/issues",
		"irc":"irc://irc.freenode.org/contao.dev",
		"source":"https://github.com/bit3/contao-doctrine-orm"
	},
	"require":{
		"php":">=5.3",
		"contao/core": ">=2.11.11,<4-dev",
		"bit3/contao-doctrine-dbal": "~1.1",
		"bit3/contao-logger": "~1",
		"contao-community-alliance/composer-installer": "*",
		"contao-community-alliance/event-dispatcher": "~1",
		"doctrine/orm": "2.4.*",
		"doctrine/migrations": "~1.0",
		"jms/serializer": "~0.15",
		"jdorn/sql-formatter": "~1.2"
	},
	"require-dev":{
		"phpunit/phpunit":"3.7.*",
		"squizlabs/php_codesniffer":"1.*",
		"bit3/php-coding-standard":"@dev"
	},
	"autoload":{
		"psr-0":{
			"Contao\\Doctrine\\ORM": "src/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"contao": {
			"sources": {
				"contao": "system/modules/doctrine-orm"
			}
		},
		"branch-alias": {
			"dev-master": "1.0.x-dev",
			"dev-develop": "2.0.x-dev"
		}
	}
}
